<% if session[:id] %>
  <div id='gravatar'>
    <%= image_tag User.first.gravatar_url %>
  </div>
  <div id="dropdown" class="hide">
    <ul>
      <li><%= link_to 'New Snipit', new_snip_path %></li>
      <li><%= link_to 'My Snipits', snip_path %></li>
      <li><a href="/boards">My Boards</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </div>
<% else %>
  <div id='session'>
    <a href="/login">Login </a>|
    <a href="/signup"> Signup</a>
  </div>
<% end %>
<div id='logo'>SnipIt</div>
<div id='search'>
  <div id='search_bar'>
    <%= form_tag do %>
      <%= text_field_tag "search", nil, :placeholder => 'e.g. Javascript Modal' %>
    <% end %>
  </div>
  <div id='language_box'>
    <% @languages.each do |language| %>
        <div class='language'>

          <div class='language_img'>
             <%= link_to image_tag(language.code+".png", class: "image_icon"), "/languages/#{language.code}/snips" %>
          </div>
        </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#gravatar').click(function(){
    $('#dropdown').fadeIn();
  });
  $('#dropdown').on('hover',function(){
    $('#dropdown').fadeOut();
  })
</script>