<% if session[:id] %>
  <div id='gravatar'>
    <%= image_tag User.first.gravatar_url %>
  </div>
  <div id="dropdown" class="hide">
    <ul>
      <li><a href="/new_snipit">Create Snipit</a></li>
      <li><a href="/snipits">My Snipits</a></li>
      <li><a href="/boards">My Boards</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </div>
<% else %>
  <div id='session'>
    <a href="/login">Login </a>|
    <a href="/signup"> Signup</a>
  </div>
<% end %>
<div id='logo'>SnipIt</div>
<div id='search'>
  <div id='search_bar'>
    <%= form_tag "/search" do %>
      <%= text_field_tag "search", nil, :placeholder => 'e.g. Javascript Modal' %>
    <% end %>
  </div>
  <div id='language_box'>
    <% @languages.each do |language| %>
        <div class='language'>
          <span class='language_name'>
            <%= language.name %>
          </span>
          <div class='language_img'>
             <%= link_to image_tag(language.code+".png", class: "image_icon"), "/languages/#{language.code}/snips" %>
          </div>
        </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#gravatar').hover(function(){
    $('#dropdown').removeClass('hide').addClass('gravatar');
  }, function(){
    $('#dropdown').addClass('hide').removeClass('gravatar')
  })
</script>
