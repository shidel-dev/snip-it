<div class="session_form">
  <div id="flash_signin" class="flash">
  	<% if flash[:success_sign_up] %>
  		<div id='flash_success_sign_up'><%= flash[:success_sign_up] %></div>
  	<% end %>

    <% if flash[:login_error] %>
      <div class='errors'><%= flash[:login_error] %></div>
    <% end %>
  </div>
  <%= form_tag("/sessions", method: "post", class: "form-style") do |f| %>
    <%= text_field_tag :email, nil, :placeholder => 'Email' %>
    <%= password_field_tag :password, nil, :placeholder => 'Password' %>
    <%= submit_tag "Sign In", :class => "submit_button" %>
  <% end %>
</div>