<div id='container'>
  <div id='languages'>
    <ul>
      <% @languages.each do |language| %>
        <%= link_to "/languages/#{language.code}/snips" do %>
          <li><%= language.name %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div id="cards">
    <h2 id="search_title"><%= @search_title %></h2>
    <%lan = []%>
    <% @snips.each do |c| %>
      <%= content_tag :div, class: "cards_data card", data: {snips:c} do %>

        <h4 class="card_title">
          <span class="card_language">
            <%= c.language.name %> -
          </span>
          <%= c.title %>
        </h4>
        <p class="card_description"><%= truncate(c.description, length: 130) %></p>
        <% lan << c.language_id %>
      <%end%>
    <%end%>
  </div>
</div>

<div class='modalHolder'>
    <div class='content'></div>
    <div class='mask'></div>
</div>

<%= javascript_include_tag "ace/ace" %>
<%= javascript_include_tag "application" %>

<script type='text/template' class='template'>
  <div id="show_card">
    <button class='clean-grey'>&#60;&#62;</button>
    <h3><%%=v.title%></h3>
    <p><%%=v.description%></p><br>
    <div id="results_editor"></div>
  </div>
</script>